{
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
        "prettier"
    ],
    "env": {
        "browser": false,
        "node": true
    },
    "rules": {
        "prettier/prettier": [
          "error",
          {
            "singleQuote": true,
            "jsxBracketSameLine": true,
            "parser": "flow"
          }
        ],
        "comma-dangle": 0,
        "arrow-parens": 0,
        "implicit-arrow-linebreak": 0,
        "global-require": 0
    },
    "plugins": [
      "prettier"
    ]
}
